{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [ "Bannerlord.ButterLib/*.csproj" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "xref": [
      "xrefs/Newtonsoft.Json-xrefmap.yml",
      "https://butr.github.io/Bannerlord.ReferenceAssemblies.Documentation/xrefmap.yml"
    ],
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ],
    "content": [
      {
        "files": [ "**/**.{md,yml}" ],
        "exclude": [ "_site/**", "obj/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "**/images/**", "codesnippet/**", "CNAME" ],
        "exclude": [ "_site/**", "obj/**" ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_enableSearch": "true",
      "_appLogoPath": "images/BUTR48.svg",
      "_appName": "ButterLib",
      "_appTitle": "ButterLib Documentation",
      "_appFooter": "Â© 2020-2023 Bannerlord's Unofficial Tools & Resources"
    },
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "modern"
    ],
    "postProcessors": [
      "ExtractSearchIndex"
    ]
  }
}

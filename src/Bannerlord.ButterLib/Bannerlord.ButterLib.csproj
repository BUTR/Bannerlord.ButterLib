<!--EXTERNAL_PROPERTIES: Version;StableVersion;BetaVersion-->
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <Authors>BUTR</Authors>
    <Configurations>Stable_Debug;Stable_Release;Beta_Debug;Beta_Release</Configurations>
  </PropertyGroup>

  <PropertyGroup>
    <ModuleName>Bannerlord.ButterLib</ModuleName>
  </PropertyGroup>

  <PropertyGroup>
    <NuspecFile>Bannerlord.ButterLib.nuspec</NuspecFile>
    <NuspecProperties>version=$(Version);configuration=$(Configuration);targetframework=$(TargetFramework)</NuspecProperties>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Bannerlord.BuildResources" Version="1.0.0.1" />
    <PackageReference Include="Lib.Harmony" Version="2.0.2" IncludeAssets="compile" />
  </ItemGroup>

  <ItemGroup Condition="$(Configuration) == 'Stable_Debug' OR $(Configuration) == 'Stable_Release'">
    <PackageReference Include="Bannerlord.ReferenceAssemblies.Core.EarlyAccess" Version="$(StableVersion).*" />
    <PackageReference Include="Bannerlord.ReferenceAssemblies.StoryMode.EarlyAccess" Version="$(StableVersion).*" />
  </ItemGroup>

  <ItemGroup Condition="$(Configuration) == 'Beta_Debug' OR $(Configuration) == 'Beta_Release'">
    <PackageReference Include="Bannerlord.ReferenceAssemblies.Core.EarlyAccess" Version="$(BetaVersion).*" />
    <PackageReference Include="Bannerlord.ReferenceAssemblies.StoryMode.EarlyAccess" Version="$(BetaVersion).*" />
  </ItemGroup>

</Project>
<!--EXTERNAL_PROPERTIES: Version;StableVersion;BetaVersion-->
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <Configurations>Stable_Debug;Stable_Release;Beta_Debug;Beta_Release</Configurations>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
  </PropertyGroup>

  <PropertyGroup Condition="$(Configuration) == 'Stable_Debug' OR $(Configuration) == 'Stable_Release'">
    <AssemblyName>Bannerlord.ButterLib.Implementation.$(StableVersion)</AssemblyName>
  </PropertyGroup>
  <PropertyGroup Condition="$(Configuration) == 'Beta_Debug' OR $(Configuration) == 'Beta_Release'">
    <AssemblyName>Bannerlord.ButterLib.Implementation.$(BetaVersion)</AssemblyName>
  </PropertyGroup>

  <!--Module Creation-->
  <PropertyGroup>
    <ModuleName>Bannerlord.ButterLib</ModuleName>
  </PropertyGroup>
  <!--Module Creation-->

  <!--NuGet Package-->
  <PropertyGroup Condition="$(Configuration) == 'Stable_Release'">
    <PackageId>Bannerlord.ButterLib</PackageId>
    <PackageDescription>A library containing common functions for modification development. For game version e$(StableVersion).</PackageDescription>
  </PropertyGroup>
  <PropertyGroup Condition="$(Configuration) == 'Beta_Release'">
    <PackageId>Bannerlord.ButterLib.Beta</PackageId>
    <PackageDescription>A library containing common functions for modification development. For game version e$(BetaVersion).</PackageDescription>
  </PropertyGroup>
  <PropertyGroup>
    <Title>ButterLib</Title>
    <Authors>BUTR</Authors>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>Butter.png</PackageIcon>
  </PropertyGroup>
  <ItemGroup>
    <None Include="../../resources/Butter.png" Pack="true" PackagePath="" />
  </ItemGroup>
  <!--NuGet Package-->

  <!--NuGet References-->
  <ItemGroup>
    <PackageReference Include="Lib.Harmony" Version="2.0.2" IncludeAssets="compile" />
  </ItemGroup>
  <ItemGroup Condition="$(Configuration) == 'Stable_Debug' OR $(Configuration) == 'Stable_Release'">
    <PackageReference Include="Bannerlord.ReferenceAssemblies.Core.EarlyAccess" Version="$(StableVersion).*" PrivateAssets="All" />
    <PackageReference Include="Bannerlord.ReferenceAssemblies.StoryMode.EarlyAccess" Version="$(StableVersion).*" PrivateAssets="All" />
  </ItemGroup>
  <ItemGroup Condition="$(Configuration) == 'Beta_Debug' OR $(Configuration) == 'Beta_Release'">
    <PackageReference Include="Bannerlord.ReferenceAssemblies.Core.EarlyAccess" Version="$(BetaVersion).*" PrivateAssets="All" />
    <PackageReference Include="Bannerlord.ReferenceAssemblies.StoryMode.EarlyAccess" Version="$(BetaVersion).*" PrivateAssets="All" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Bannerlord.ButterLib\Bannerlord.ButterLib.csproj" />
  </ItemGroup>
  <!--NuGet References-->

</Project>